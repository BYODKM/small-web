include /html_elements/lib/main

-
  var title = '+code | Usage'

+html
  +head
    +title
  +body
    +page
      .page__gutter

        p
          code
            | code

        p
          code.code
            | code.code

        pre
          code.code
            | pre code.code

        pre
          code.code(data-lang="jade")
            | pre code.code(data-lang="jade")

        pre
          code.code.code--dark(data-lang="jade")
            | pre code.code.code--dark(data-lang="jade")

        pre
          code.code(data-lang="coffee-script")
            | if items.length
            |   for item in items
            |     item.classList.add('is-current') if isCurrent(item)
