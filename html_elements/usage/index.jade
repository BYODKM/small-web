-
  var title = 'Usage'

  var boxUsageIndex = {
    groups: [
      {
        label: 'blocks',
        items: [
          'breadcrumbs'
        ]
      },{
        label: 'elements',
        items: [
          'button',
          'checkbox',
          'form',
          'hx',
          'icon',
          'radio',
          'select',
          'space',
          'sprite',
          'weak'
        ]
      },{
        label: 'scripts',
        items: [
          'placeholder-polyfill',
          'smooth-scroll'
        ]
      }
    ]
  }

+html
  +head
    +title
  +body.body--lightgray
    +page
      +include("box-usage-index")
