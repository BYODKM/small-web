.select
  $w = 8em

  :root &
    position relative
    box-sizing border-box
    display inline-block
    padding 0
    border 1px solid
    border-radius 4px
    overflow hidden
    appearance none
    vertical-align middle
    cursor pointer
    background-color white
    -webkit-font-smoothing antialiased

    &:before
    &:after
      empty-content-block()
      overflow hidden
      pointer-events none

    &:before
      absolute 0 0 null null
      size 2em
      background-image linear-gradient(90deg, rgba(white, 0.5), white 33%)

    &:after
      absolute 0.8em 0.5em null null
      size 0
      border 5px solid
      border-bottom-color transparent
      border-right-color transparent
      border-left-color transparent

  :root &:not(select)
    width: $w
    height 2em

  & &__self
    box-sizing border-box
    padding-left 0.5em
    width $w * 1.2
    height 1.8em
    border 0
    white-space nowrap
    cursor pointer
    appearance none
    background none
    -webkit-font-smoothing antialiased

    &:focus
      outline none
