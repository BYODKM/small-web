.select

  select()
    display inline-block
    box-sizing border-box
    padding 0 0 0 0.4em
    border 1px solid
    border-radius 4px
    height 2em
    max-width 100%
    overflow hidden
    appearance none
    vertical-align middle
    cursor pointer
    background-color white
    -webkit-font-smoothing antialiased

    &:focus
      outline none

  :root &
    position relative
    select()

    &:not(select)
      padding 0
      border 0
      border-radius 0

    &:not(select):before
    &:not(select):after
      empty-content-block()
      pointer-events none

    &:not(select):before
      absolute 1px 1px null null
      border-radius 4px
      size 4em 1.9em
      background-image linear-gradient(90deg, rgba(white, 0), white 66%)

    &:not(select):after
      absolute 0.9em 0.7em null null
      size 0
      border 5px solid transparent
      border-top-color currentColor

  & &__self
    select()
