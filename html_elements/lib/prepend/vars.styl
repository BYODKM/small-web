// CONSTANTS
REM = 16px

// FONT FAMILY
serif      = unquote('Georgia, serif')
sans-serif = unquote('"Open Sans", "メイリオ", sans-serif')
monospace  = unquote('Monaco, monospace')
icon-font  = "Ionicons"

// FONT SIZE
ks-rem-base = REM
xx-small    = em(9px, REM)
x-small     = em(11px, REM)
small       = em(13px, REM)
medium      = em(16px, REM)
large       = em(18px, REM)
x-large     = em(21px, REM)
