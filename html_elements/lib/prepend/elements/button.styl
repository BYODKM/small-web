.button

  &:not(:root)
    display inline-block
    box-sizing border-box
    padding 0 0.75em
    border 1px solid dimgray
    border-radius $BUTTON_R
    height 2em
    color inherit
    text-decoration none
    line-height 1.9
    vertical-align middle
    background white
    appearance none
    -webkit-font-smoothing antialiased
    user-select none

    &:hover
    &:focus
    &:active
      outline none

    .no-touch &:hover
      background-color whitesmoke

  & + &
    margin-left 0.5em

  &&--link
    link-tint-style()
    border-color currentColor

    .no-touch &:hover
      background-color lighten(blue, 90%)

  &&--execute
    border-color green
    color white
    background-color green

    .no-touch &:hover
      background-color lighten(green, 5%)

  &&--danger
    border-color red
    color white
    background-color red

    .no-touch &:hover
      background-color darken(red, 18%)
