input-textarea-style()

  :root &
    box-sizing border-box
    border 1px solid black
    border-radius $INPUT_R
    appearance none
    font-family sans-serif
    -webkit-font-smoothing antialiased

    +placeholder()
      color darkgray
      opacity 1

    &.is-polyfilled
      color darkgray

    &:focus
      border-color blue
      outline none
      box-shadow 0 0 5px rgba(skyblue, 0.75)

      +placeholder()
        color transparent
