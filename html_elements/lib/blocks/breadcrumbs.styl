.breadcrumbs
  $lineH = 2

  :root &
    margin 0

  & &__items
    clear fix

  & &__item
    position relative
    float left
    color gray
    line-height $lineH

    &:before
      content "/"
      display inline-block
      margin 0 0.6em
      color silver

    &--icon
      size 1em

      &:before
        display none

  & &__home
    link-tint-style()
    absolute -0.1em null null 0
    width 1em
    overflow hidden
    font-family icon-font
    font-size 1.1em
    white-space nowrap

    &:before
      content "\f38f"
      padding-right 1em
